<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/underbar">
    <LinearLayout
        android:id="@+id/underbar_List"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/icon_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_friend"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/icon_chatList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_menu"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/icon_setting_underbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_settings"
            android:layout_gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/underbar_Room"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:visibility="gone">
    <ImageView
        android:id="@+id/icon_add_underbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_add_menu"/>
        <EditText
            android:id="@+id/edttext_chatroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:layout_gravity="center"

            />
        <ImageView
            android:id="@+id/icon_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_send"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/underbar_Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000"/>
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_table_album" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_table_file" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:text="지도"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:text="일정"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
                android:layout_margin="22dp"
            android:text="카메라"
            />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:text="이모티콘"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:text="검색"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="22dp"
                android:text="순서 편집"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>