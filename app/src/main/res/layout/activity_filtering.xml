<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filtering"
    android:id="@+id/Filtering_RootLayout"
    android:padding="12dp">
    
    <EditText
        android:id="@+id/filtering_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/filtering_x"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_notification_clear_all" />

    <ListView
        android:id="@+id/filtering_ListView"
        android:layout_below="@id/filtering_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"></ListView>
</RelativeLayout>