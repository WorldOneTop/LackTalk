<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:padding="12dp">
    <HorizontalScrollView
        android:id="@+id/add_scrollview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <LinearLayout
            android:id="@+id/add_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:id="@+id/add_editText"
        android:layout_below="@+id/add_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<ListView
    android:id="@+id/add_listview"
    android:layout_below="@id/add_editText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textFilterEnabled="true"></ListView>

</RelativeLayout>